pipeline {
    environment {
        PATH = "/usr/local/bin:$PATH"
    }
    
    agent any
    
    tools { nodejs "NodeJS" }

    stages {
        stage('git clone') {
            steps {
             git url: "https://github.com/elad-cloudan/hello.git", branch: "main" 
            }
        }
        
        stage('build') {
            steps {
                script {
                    sh 'npm install'
                    sh 'pwd'
                }
            }
        }
        
        // Install the Snyk CLI with npm.
        stage('Install snyk CLI') {
            steps {
                script {
                    sh 'npm install -g snyk'
                }
            }
        }
        
        // Authorize the Snyk CLI
        stage('Authorize Snyk CLI') {
            steps {
                withCredentials([string(credentialsId: 'SNYK_TOKEN', variable: 'SNYK_TOKEN')]) {
                    sh 'snyk auth ${SNYK_TOKEN}'
                }
            }
        }
                
        // Snyk monitor
        stage('Snyk Open Source') {
                    steps {
                            sh 'snyk monitor'
                    }
                }
        
    stage('Build Docker Image') {
            steps {
                // Build your Docker image
                script {
                    def image = docker.build("doneladio/node-hello-world:latest")
                }

                // Push the image to Docker Hub
                script {
                    sh 'docker push doneladio/node-hello-world:latest'
                    //docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                      //  def image = docker.image("doneladio/node-hello-world:latest")
                        //image.push()
                }
             }
    }
}
}
